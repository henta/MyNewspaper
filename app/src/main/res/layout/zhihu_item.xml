<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_color_code"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/zhihu_daily_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zhihu_daily_item_iv"
                android:layout_width="96dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                 />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zhihu_daily_item_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:text="标题"
                    android:textColor="@color/md_black_color_code"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/zhihu_daily_item_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:paddingBottom="4dp"
                    android:paddingRight="24dp"
                    android:text="时间"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>